<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_dialog"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/delegate_image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/order_now"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/delegate_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Delegate Name"
                        android:textColor="#808080"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_error"
                        android:drawablePadding="5dp"
                        android:drawableStart="@drawable/ic_error"
                        android:gravity="center"
                        android:id="@+id/verify_state"
                        android:text="@string/not_verified"
                        android:textColor="#FFD300"
                        android:textSize="12sp" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_error"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_error"
                    android:gravity="center"
                    android:id="@+id/featured_account"
                    android:text="عميل مميز"
                    android:textColor="#FFD300"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RatingBar
                        style="?android:ratingBarStyleIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="2"
                        android:id="@+id/rating"
                        android:theme="@style/RatingBar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        tools:text="(65)"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/description"
                    tools:text="Delegate wants to deliver your package"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/delivery_cost"
                android:gravity="center"
                android:drawablePadding="2dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                tools:text="35.35 RS"
                android:id="@+id/price"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/car_model_parent"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/car_model"
                android:gravity="center"
                android:drawablePadding="2dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                tools:text="35.35 RS"
                android:id="@+id/car_model"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/car_type_parent"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/car_type"
                android:gravity="center"
                android:drawablePadding="2dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                tools:text="35.35 RS"
                android:id="@+id/car_type"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:id="@+id/car_number_parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/car_number"
                android:gravity="center"
                android:drawablePadding="2dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                tools:text="35.35 RS"
                android:id="@+id/car_number"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/duration"
                android:gravity="center"
                android:drawablePadding="2dp"
                android:drawableLeft="@drawable/ic_access_time"
                android:drawableStart="@drawable/ic_access_time"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                tools:text="2 Hours"
                android:id="@+id/duration"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/distance"
                android:gravity="center"
                android:drawablePadding="2dp"
                android:drawableLeft="@drawable/ic_location_grey"
                android:drawableStart="@drawable/ic_location_grey"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                tools:text="7.5 KM"
                android:id="@+id/distance"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">


            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="@string/accept"
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/accept"
                android:textColor="@color/colorPrimary"
                android:layout_height="match_parent" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="@string/reject"
                android:id="@+id/reject"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#808080"
                android:layout_height="match_parent" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>