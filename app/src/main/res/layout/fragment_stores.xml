<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActiveOrdersFragment">


    <include
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1.3dp"
        android:id="@+id/white_line"
        android:layout_below="@id/app_bar"
        android:background="@color/whiteColor"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/user_state"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/whiteColor"
        android:layout_below="@id/white_line"
        android:text="تم تفعيل حسابك كمندوب"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/user_blocked"
        android:paddingTop="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/whiteColor"
        android:layout_below="@id/user_state"
        android:text="حسابك مقفل لغايات الدفع"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/user_blocked"
        android:paddingTop="15dp"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:id="@+id/search_parent"
        android:paddingBottom="15dp"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/whiteColor"
            android:textSize="15sp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_height="wrap_content"
            android:text="@string/stores"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:padding="6dp"
            android:weightSum="1"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_search"
            android:layout_height="33dp">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:inputType="none"
                android:focusable="false"
                android:background="@null"
                android:id="@+id/search_text"
                android:layout_height="wrap_content"
                tools:ignore="LabelFor" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/search_button"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:background="@drawable/bg_orange_button"/>


        </LinearLayout>

    </LinearLayout>



    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        style="@style/CategoryTab"
        android:layout_below="@id/search_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_below="@id/tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>